<h1>Albums List</h1>

<%= link_to 'Add Album', new_album_path %>
<br /><br />

<table>
  <tr>
    <th>Artist</th>
    <th>Album</th>
    <th>Age</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.artist %></td>
    <td><%= link_to album.album, album %></td>
    <td><%= album.age %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

