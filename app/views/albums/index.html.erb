<h4>Albums List</h4>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= sortable "artist" %></th>
      <th><%= sortable "album" %></th>
      <th><%= sortable "age", "Months" %></th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.artist %></td>
        <td><%= link_to album.album, album %></td>
        <td><%= album.age %></td>
        <div class="btn-group">
          <td><button class="btn"><%= link_to 'Edit', edit_album_path(album) %></button></td>
          <td><button class="btn"><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
<button class="btn"><%= link_to 'Add Album', new_album_path %></button>
